@using UmbracoAssignment.ViewModels
@model CallbackFormViewModel

@using (Html.BeginUmbracoForm("HandleCallbackForm", "Form", FormMethod.Post, new{novalidate = "novalidate", id= "callbackForm"}))
{
	<div class="form">
		<div class="form-input">
			<label class="sr-only" asp-for="Name"></label>
			<input class="input" asp-for="Name" type="text" id="name" placeholder="@Html.DisplayNameFor(x => x.Name)" />
			<span asp-validation-for="Name"></span>
		</div>
		<div class="form-input">
			<label class="sr-only" asp-for="Email"></label>
			<input class="input" asp-for="Email" type="email" id="email" placeholder="@Html.DisplayNameFor(x => x.Email)" />
			<span asp-validation-for="Email"></span>

		</div>
		<div class="form-input">
			<label class="sr-only" asp-for="Phone"></label>
			<input class="input" asp-for="Phone" type="tel" id="phone" placeholder="@Html.DisplayNameFor(x => x.Phone)" />
			<span asp-validation-for="Phone"></span>

		</div>
		<div class="form-input">
			<label class="sr-only" asp-for="SeclectedOptions"></label>
			<div class="relative">
				<select class="input" asp-for="SeclectedOptions">
					<option disabled hidden selected value="">Please Select and option</option>
					<option value="Tax Fraud">Tax Fraud</option>
					<option value="Shredding documents">Shredding documents</option>
					<option value="Embesseling">Embesseling</option>
				</select>
				<span class="absolute">
					<svg xmlns="https://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
					</svg>
				</span>
			</div>
			<span asp-validation-for="SeclectedOptions"></span>

		</div>

		<div>
			<button class="btn-submit btn rte-bold" type="submit">Submit</button>
		</div>
	</div>
}